{
  "bsonType": "object",
  "required": ["user_id", "product_id"],
  "permission": {
    "read": "doc.user_id == auth.uid",
    "create": "auth.uid != null",
    "update": false,
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID",
      "foreignKey": "uni-id-users._id"
    },
    "product_id": {
      "bsonType": "string", 
      "description": "商品ID",
      "foreignKey": "a-products._id"
    },
    "product_title": {
      "bsonType": "string",
      "description": "商品标题（冗余字段，便于查询展示）",
      "maxLength": 200
    },
    "product_image": {
      "bsonType": "string",
      "description": "商品主图（冗余字段，便于查询展示）",
      "maxLength": 500
    },
    "product_price": {
      "bsonType": "number",
      "description": "商品价格（冗余字段，便于查询展示）",
      "minimum": 0
    },
    "product_rating": {
      "bsonType": "number",
      "description": "商品评分（冗余字段，便于查询展示）",
      "minimum": 0,
      "maximum": 5
    },
    "product_sales": {
      "bsonType": "int",
      "description": "商品销量（冗余字段，便于查询展示）",
      "minimum": 0
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "收藏时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "updated_at": {
      "bsonType": "timestamp", 
      "description": "更新时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
} 