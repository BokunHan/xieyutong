{
	"bsonType": "object",
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"required": ["task_name", "send_time", "payload"],
	"properties": {
		"task_name": {
			"bsonType": "string",
			"title": "任务名称"
		},
		"send_time": {
			"bsonType": "string",
			"title": "计划发送时间"
		},
		"payload": {
			"bsonType": "array",
			"title": "消息内容"
		},
		"filter_agent_id": {
			"bsonType": "string",
			"title": "指定管家ID",
			"description": "为空则对所有人生效"
		},
		"status": {
			"bsonType": "string",
			"defaultValue": "active"
		}, // active, disabled, expired
		"created_at": {
			"bsonType": "timestamp"
		}
	}
}